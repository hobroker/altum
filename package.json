{
  "name": "altum",
  "version": "0.1.0",
  "description": "CD on dockers",
  "main": "src/index.js",
  "repository": "https://github.com/hobroker/altum",
  "author": "Igor Leahu <igor.leahu@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "node index.js",
    "dev": "node -r @babel/register src/index.js",
    "dev:watch": "nodemon --inspect=8100 src/index.js",
    "build": "ls -la node_modules && babel src -d build",
    "lint": "eslint src --ext .js --max-warnings 0",
    "postinstall": "npm run build"
  },
  "bin": {
    "altum": ".bin/altum.js"
  },
  "dependencies": {
    "@octokit/rest": "^16.35.0",
    "consola": "^2.11.0",
    "execa": "^3.4.0",
    "find-up": "^4.1.0",
    "get-port": "^5.0.0",
    "yargs": "^15.0.2",
    "yargs-parser": "^16.1.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.7.4",
    "@babel/core": "^7.7.4",
    "@babel/node": "^7.7.4",
    "@babel/preset-env": "^7.7.4",
    "@babel/register": "^7.7.4",
    "babel-eslint": "^10.0.3",
    "eslint": "^6.7.2",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-prettier": "^3.1.1",
    "jest": "^24.9.0",
    "lint-staged": "^9.5.0",
    "nodemon": "^2.0.1",
    "prettier": "1.19.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "(src|tests)/**/*.js": [
      "eslint --max-warnings 0"
    ]
  },
  "jest": {
    "coverageDirectory": "./coverage/",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "modulePathIgnorePatterns": [
      "/build"
    ],
    "testEnvironment": "node"
  }
}
